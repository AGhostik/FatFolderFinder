<Window
    x:Class="FatFolderFinder.UI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FatFolderFinder.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:FatFolderFinder.UI"
    Title="MainWindow"
    Width="525"
    Height="350"
    d:DataContext="{d:DesignInstance Type=vm:MainViewModel}"
    mc:Ignorable="d">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30*" />
                <RowDefinition Height="30*" />
                <RowDefinition Height="209*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="4*" />
                </Grid.ColumnDefinitions>
                <Button
                    Name="FolderDialogButton"
                    Margin="5"
                    Click="FolderDialogButton_Click"
                    Content="Pick Folder" />
                <TextBox
                    Grid.Column="1"
                    Margin="5"
                    Text="{Binding Path=Path, Mode=TwoWay}"
                    TextWrapping="Wrap" />
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Button
                    Name="ScanButton"
                    Margin="5"
                    Click="ScanButton_Click"
                    Content="Scan" />
                <TextBox
                    Grid.Column="1"
                    Margin="5"
                    Text="{Binding Path=Size, Mode=TwoWay}"
                    TextWrapping="Wrap" />
                <ComboBox Grid.Column="2" Margin="5" />
            </Grid>

            <Expander
                Grid.Row="2"
                Margin="5,4.8,5.4,4.8"
                Header="Expand folder list">
                <Grid Background="#FFE5E5E5">
                    <ListView ItemsSource="{Binding Folders}" />
                </Grid>
            </Expander>

        </Grid>
    </Grid>
</Window>
